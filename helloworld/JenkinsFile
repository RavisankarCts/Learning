pipeline {
    agent any
    tools {
        maven 'M3'
        jdk 'JDK'
    }
    stages {
        stage ('Initialize') {
            steps {
                cmd '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                echo 'This is a minimal pipeline.'
            }
        }
    }
}