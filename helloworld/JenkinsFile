pipeline {
    agent any
    tools {
        maven 'M3'
        jdk 'JDK'
    }
    stages {
        stage ('Initialize') {
            steps {
                bat '''
                    echo "PATH = %PATH%"
                    echo "M2_HOME = %M2_HOME%"
                '''
            }
        }

        stage ('Build') {
            steps {
                bat 'mvn -f helloworld/pom.xml -Dmaven.test.failure.ignore=true install' 
            }
            post {
                success {
                    junit 'helloworld/target/surefire-reports/**/*.xml' 
                }
            }
        }
        
        stage ('test') {
            steps {
                bat 'echo hello' 
            }
        }
        
        stage ('build docker image') {
            steps {
                bat 'echo building docker image' 
            }
        }
        
        stage ('upload docker image to docker registry') {
            steps {
                bat 'echo building docker image' 
            }
        }
        
    }
}